        "sass": "^1.81.1",
        "vue": "^3.5.13"
    },
    "devDependencies": {
        "@types/node": "^22.10.1",
        "@vitejs/plugin-vue": "^5.2.1",
        "autoprefixer": "^10.4.20",
        "gh-pages": "^6.2.0",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.15",
        "typescript": "~5.6.2",
        "vite": "^6.0.1",
        "vue-tsc": "^2.1.10"
    }
}
